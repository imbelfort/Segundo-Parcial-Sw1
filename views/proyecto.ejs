      border: 1px solid #ccc;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .modern-toolbar2 {
      position: fixed;
      right: 0;
      top: 0;
      height: 100%;
      width: 160px;
      background: #2c3e50;
      padding: 10px;
      color: white;
      display: flex;
      flex-direction: column;
      gap: 10px;
      z-index: 1000;
      overflow-y: auto;
      box-shadow: 2px 0 10px rgba(0, 0, 0, 0.3);
    }

    .modern-toolbar2 label {
      font-size: 16px;
      margin-bottom: 10px;
      font-weight: bold;
      color: #ecf0f1;
    }

    .modern-toolbar2 button {
      display: flex;
      align-items: center;
      gap: 8px;
      padding: 8px 10px;
      background: #34495e;
      border: none;
      color: white;
      border-radius: 4px;
      font-size: 14px;
      cursor: pointer;
      transition: background 0.2s;
    }

    .modern-toolbar2 button:hover {
      background: #3d566e;
    }

    .modern-toolbar {
      position: fixed;
      left: 0;
      top: 0;
      height: 100%;
      width: 160px;
      background: #2c3e50;
      padding: 10px;
      color: white;
      display: flex;
      flex-direction: column;
      gap: 10px;
      z-index: 1000;
      overflow-y: auto;
